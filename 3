#include <iostream>
#include <cmath>
#include <limits>
using namespace std;
// Прототипы функций
double getValue();
void checkStep(const double step);
double getY(const double x);
bool isDomain(const double x);

int main() {
    cout << "начальное значение x: ";
    double xstart = getValue();
    cout << "конечное значение x: ";
    double xend = getValue();
    cout << "шаг ∆x: ";
    double step = getValue();
    // Табулирование функции
    for (double x = xstart; x <= xend; x += step) {
        cout << "x = " << x;
        if (isDomain(x)) {
            cout << " y = " << getY(x) << endl;
        } else {
            cout << " x только положительгый т.е (x < 0)" << endl;
        }
    }  
    return 0;
}
// Функция для корректного ввода числа
double getValue() {
    double value;
    cin >> value;
    if (cin.fail()) {
        cout << "Только числа" << endl;
        abort();
    }
    return value;
}
// Проверка корректности шага
void checkStep(const double step) {
    if (step <= 0) {
        cout << "Шаг должен быть положительный" << endl;
        abort();
    }
}
double getY(const double x) {
    return x + sqrt(x) + cbrt(x) - 2.5;
}
// Проверка области определения функции
bool isDomain(const double x) {
    return x >= 0;
}
